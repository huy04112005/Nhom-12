<odoo>
    <record id="view_asset_booking_calendar" model="ir.ui.view">
        <field name="name">asset.booking.calendar</field>
        <field name="model">asset.booking</field>
        <field name="arch" type="xml">
            <calendar string="Lịch đặt" 
                      date_start="start_time" 
                      date_stop="end_time" 
                      color="room_id" 
                      mode="month"
                      quick_add="False">
                <field name="user_id"/>
                <field name="asset_id"/>
                <field name="purpose"/>
            </calendar>
        </field>
    </record>

    <record id="view_asset_booking_tree" model="ir.ui.view">
        <field name="name">asset.booking.tree</field>
        <field name="model">asset.booking</field>
        <field name="arch" type="xml">
            <tree decoration-info="state=='draft'" decoration-success="state=='approved'" decoration-muted="state=='cancel'">
                <field name="room_id"/>
                <field name="asset_id"/>
                <field name="user_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_asset_booking_form" model="ir.ui.view">
        <field name="name">asset.booking.form</field>
        <field name="model">asset.booking</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_approve" string="Duyệt" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_done" string="Hoàn thành" type="object" invisible="state != 'approved'"/>
                    <button name="action_cancel" string="Hủy" type="object" invisible="state in ('done','cancel')"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="room_id"/>
                            <field name="asset_id"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="start_time"/>
                            <field name="end_time"/>
                        </group>
                    </group>
                    <label for="purpose" string="Mục đích sử dụng"/>
                    <field name="purpose"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_asset_booking" model="ir.actions.act_window">
        <field name="name">Đặt Lịch</field>
        <field name="res_model">asset.booking</field>
        <field name="view_mode">calendar,tree,form</field>
    </record>

    <menuitem id="menu_asset_booking"
              name="Đặt lịch"
              parent="menu_asset_meeting_root"
              action="action_asset_booking"
              sequence="1"/>
</odoo>